{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Push Plugin to WordPress Repo",
            "type": "shell",
            "command": "git",
            "args": [
                "subtree",
                "push",
                "--prefix=snefuruplin",
                "plugin-repo",
                "main"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
} 